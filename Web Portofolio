    <script>
        // Navigation toggle
        const hamburger = document.querySelector('.hamburger');
        const navLinks = document.querySelector('.nav-links');

        hamburger.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            hamburger.innerHTML = navLinks.classList.contains('active') ? 
                '<i class="fas fa-times"></i>' : '<i class="fas fa-bars"></i>';
        });

        // Close mobile menu when clicking on a link
        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', () => {
                navLinks.classList.remove('active');
                hamburger.innerHTML = '<i class="fas fa-bars"></i>';
            });
        });

        // Header scroll effect
        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // FORM SUBMISSION FIXED - Tidak akan redirect ke Formspree
        const contactForm = document.getElementById('contactForm');

        if (contactForm) {
            contactForm.addEventListener('submit', async function(e) {
                e.preventDefault(); // Penting: cegah form submit default
                
                // GANTI DENGAN FORMSPREE ENDPOINT ANDA
                const FORMSPREE_ENDPOINT = "https://formspree.io/f/movkqoyk"; // GANTI xjvqlkgy dengan ID Anda
                
                // Buat elemen notifikasi jika belum ada
                let notification = document.getElementById('form-notification');
                if (!notification) {
                    notification = document.createElement('div');
                    notification.id = 'form-notification';
                    notification.style.cssText = 'display: none; margin-top: 20px; padding: 15px; border-radius: 8px; text-align: center;';
                    contactForm.parentNode.appendChild(notification);
                }
                
                // Tampilkan loading state
                showNotification('Mengirim pesan...', 'loading');
                
                // Disable submit button
                const submitBtn = contactForm.querySelector('.submit-btn');
                const originalText = submitBtn.innerHTML;
                submitBtn.disabled = true;
                submitBtn.innerHTML = 'Mengirim... <i class="fas fa-spinner fa-spin"></i>';
                
                try {
                    // Kirim data menggunakan Fetch API
                    const formData = new FormData(contactForm);
                    
                    const response = await fetch(FORMSPREE_ENDPOINT, {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'Accept': 'application/json'
                        }
                    });
                    
                    if (response.ok) {
                        // Sukses - tampilkan notifikasi di website Anda
                        showNotification('✅ Pesan berhasil dikirim! Saya akan membalasnya segera.', 'success');
                        contactForm.reset();
                    } else {
                        // Error dari Formspree
                        throw new Error('Gagal mengirim pesan');
                    }
                    
                } catch (error) {
                    // Error handling
                    showNotification('❌ Maaf, terjadi error. Silakan coba lagi atau hubungi saya langsung via email.', 'error');
                    console.error('Error:', error);
                } finally {
                    // Enable submit button kembali
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalText;
                }
                
                function showNotification(message, type) {
                    notification.textContent = message;
                    notification.className = '';
                    notification.classList.add(`notification-${type}`);
                    notification.style.display = 'block';
                    
                    // Auto hide setelah 5 detik untuk notifikasi sukses/error
                    if (type !== 'loading') {
                        setTimeout(() => {
                            notification.style.display = 'none';
                        }, 5000);
                    }
                }
            });
        }

        // Create stars for space background
        function createStars() {
            const starsContainer = document.getElementById('stars');
            if (!starsContainer) return;
            
            const starCount = 200;
            
            for (let i = 0; i < starCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                
                const size = Math.random() * 2 + 1;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.left = `${Math.random() * 100}%`;
                star.style.top = `${Math.random() * 100}%`;
                star.style.animationDelay = `${Math.random() * 3}s`;
                
                starsContainer.appendChild(star);
            }
        }

        // Create meteors
        function createMeteors() {
            const meteorsContainer = document.getElementById('meteors');
            if (!meteorsContainer) return;
            
            const meteorCount = 5;
            
            for (let i = 0; i < meteorCount; i++) {
                const meteor = document.createElement('div');
                meteor.classList.add('meteor');
                
                meteor.style.left = `${Math.random() * 20}%`;
                meteor.style.top = `${Math.random() * 20}%`;
                meteor.style.animationDelay = `${Math.random() * 5}s`;
                
                meteorsContainer.appendChild(meteor);
            }
        }

        // LED border animation
        const ledBorder = document.querySelector('.led-border');
        if (ledBorder) {
            const colors = ['#7cdcf9', '#4a90e2', '#00d4ff'];
            let currentColorIndex = 0;
            
            setInterval(() => {
                ledBorder.style.borderColor = colors[currentColorIndex];
                ledBorder.style.boxShadow = `0 0 15px ${colors[currentColorIndex]}`;
                currentColorIndex = (currentColorIndex + 1) % colors.length;
            }, 2000);
        }

        // Initialize effects when page loads
        window.addEventListener('load', () => {
            createStars();
            createMeteors();
        });
    </script>
</body>
</html>
